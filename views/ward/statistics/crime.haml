.panel
  %h3 Number of crimes
  -#.crime-volume.yearly
    %ol.chart-column
      - @ward_stats_crimes_per_year = ward_stats_crimes_per_year(ward)
      - @current_year_crimes = "0"
      - @ward_stats_crimes_per_year.each do |hash|
        - @max = @ward_stats_crimes_per_year.map{|x| x[:crime_count_for_year]}.max
        - @percentage = number_to_percentage(hash[:crime_count_for_year].to_f / @max)
        - @current = hash[:year].to_i.to_s == year ? "current" : ""
        - if (hash[:year].to_i.to_s == year) 
          - @current_year_crimes = hash[:crime_count_for_year]
        %li{:style => "width: 10%;", :class => "#{@current}"}
          %span.point
            %span.idx{:style => "height: #{@percentage}%;", :title => "#{hash[:year].to_int} - #{format_number hash[:crime_count_for_year].to_int} crimes"}
    .xaxis
      .tick.first 
        2002
      .tick.last
        2011
  .summary
    %p
      %span#summary_count
        %strong 
          = format_number @current_year_crimes
      in
      %span.year
        = year
    %p
      %span.mute
        \-6.2% from 2010
