- content_for :javascript do
  :javascript
    $(document).ready(function() {
      //Ward.events.load_ward_clickables();
      callThis();

      function callThis() {
        $(".ward-selector").click(function() {
          var element = $(this);
          var number = element.attr("data-ward");
          var year   = element.attr("data-year");
          element.parent().attr("class", "current");

          var ward = new OpenCity.Ward(number, year).present();

          return false;
        });
      }
    });

#vis
  = haml :"year-selector"
  = haml :"ward-selector"

  .vis-label
    %h2 3. Compare
    %p.tip
      %strong Tip:
      Drag wards up and down to reorder for easy comparison.

  .vis-content
    #compare
      #ward-charts

